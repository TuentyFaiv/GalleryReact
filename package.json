{
  "name": "@tuentyfaiv/gallery-react",
  "version": "0.2.0",
  "description": "A photo gallery in react",
  "main": "./lib/main.js",
  "module": "./lib/main.js",
  "types": "./lib/main.d.js",
  "author": "Tonalli",
  "license": "MIT",
  "keywords": [
    "javascript",
    "typescript",
    "sass",
    "react",
    "gallery",
    "photos"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build:react": "react-scripts build",
    "build": "npm run clean && npm run build:css && npm run build:ts",
    "build:css": "npm run build:css-components && npm run build:css-containers",
    "build:css-components": "node-sass src/components -o lib/components --output-style compressed",
    "build:css-containers": "node-sass src/containers -o lib/containers --output-style compressed",
    "build:ts": "tsc --project tsconfig.prod.json",
    "build:dev:ts": "tsc",
    "clean": "rm -rf ./lib",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.1.0",
    "@types/node": "^18.7.23",
    "@types/node-sass": "^4.11.2",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "node-sass": "^7.0.1",
    "typescript": "^4.8.4"
  },
  "files": [
    "/lib"
  ],
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TuentyFaiv/GalleryReact.git"
  },
  "bugs": {
    "url": "https://github.com/TuentyFaiv/GalleryReact/issues"
  },
  "homepage": "https://github.com/TuentyFaiv/GalleryReact#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
